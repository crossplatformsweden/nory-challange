{
  "name": "@repo/plop-generators",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc && cp -r src/plop-templates dist/",
    "dev": "tsc -w",
    "lint": "eslint \"src/**/*.{ts,tsx,js,jsx}\"",
    "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist",
    "plop": "ts-node --esm --transpile-only node_modules/plop/src/plop.js --plopfile src/plopfile.ts",
    "generate:page": "pnpm plop next-page",
    "generate:page:force": "pnpm plop next-page -- --force",
    "generate:page:cli": "ts-node --esm --transpile-only node_modules/plop/src/plop.js --plopfile src/plopfile.ts next-page",
    "generate:direct": "node src/direct-generator.js",
    "check-types": "tsc --noEmit",
    "test": "echo 'Tests skipped for plop generators'",
    "test:watch": "echo 'Tests skipped for plop generators'",
    "test:coverage": "echo 'Tests skipped for plop generators'"
  },
  "dependencies": {
    "plop": "^4.0.1",
    "handlebars": "^4.7.8",
    "ts-node": "^10.9.2"
  },
  "devDependencies": {
    "@repo/typescript-config": "workspace:*",
    "@repo/eslint-config": "workspace:*",
    "@types/node": "^20.11.24",
    "tsup": "^8.0.2",
    "typescript": "5.5.3",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.12"
  }
}
