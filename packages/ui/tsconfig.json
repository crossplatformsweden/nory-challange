{
  "extends": "@repo/typescript-config/react-library.json",
  "compilerOptions": {
    "outDir": "dist",
    "skipLibCheck": true,
    "paths": {
      "@/*": ["./src/*"],
      "@/components/ui/*": ["./src/components/*"],
      "@/hooks/*": ["./src/hooks/*"]
    }
  },
  "include": ["src", "eslint.config.ts", "types.d.ts"],
  "exclude": [
    "dist",
    "build",
    "node_modules",
    "**/*.test.tsx",
    "**/*.test.ts",
    "**/*.stories.tsx"
  ]
}
