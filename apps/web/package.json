{
  "name": "web",
  "version": "0.1.0",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "next dev --port 3001 --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "eslint .",
    "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf .next",
    "check-types": "tsc --noEmit",
    "test": "pnpm test:unit && pnpm test:e2e",
    "test:unit": "jest --config jest.config.cjs",
    "test:unit:watch": "jest --watch --config jest.config.cjs",
    "test:unit:coverage": "jest --coverage --config jest.config.cjs",
    "kill-port": "lsof -ti:3001 | xargs kill -9 2>/dev/null || true",
    "test:e2e": "playwright test --config playwright.config.ts",
    "test:e2e:ui": "playwright test --ui --config playwright.config.ts",
    "install:browsers": "playwright install --with-deps chromium firefox webkit"
  },
  "dependencies": {
    "@repo/api-client": "workspace:*",
    "@repo/ui": "workspace:*",
    "@repo/zod-clients": "workspace:*",
    "@tanstack/react-query": "^5.0.0",
    "clsx": "^2.1.1",
    "next": "^15.3.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-hook-form": "^7.51.1",
    "tailwind-merge": "^3.3.0",
    "whatwg-fetch": "^3.6.20"
  },
  "devDependencies": {
    "@next/eslint-plugin-next": "^15.3.2",
    "@playwright/test": "^1.52.0",
    "@repo/eslint-config": "workspace:*",
    "@repo/jest-config": "workspace:*",
    "@repo/tailwind-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@testing-library/jest-dom": "^6.5.0",
    "@testing-library/react": "^14.3.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.11.19",
    "@types/react": "^18.2.55",
    "@types/react-dom": "^18.2.19",
    "@types/testing-library__jest-dom": "^6.0.0",
    "@types/whatwg-fetch": "^0.0.33",
    "autoprefixer": "^10.4.17",
    "babel-jest": "^29.7.0",
    "daisyui": "^5.0.35",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "msw": "^2.0.0",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "typescript": "5.5.3"
  },
  "msw": {
    "workerDirectory": [
      "public"
    ]
  }
}
