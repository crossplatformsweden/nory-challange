{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "globalEnv": ["CI"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "test": {
      "dependsOn": ["^build"],
      "inputs": [
        "src/**/*.{js,jsx,ts,tsx}",
        "test/**/*.{js,jsx,ts,tsx}",
        "app/**/*.{js,jsx,ts,tsx}",
        "__tests__/**/*.{js,jsx,ts,tsx}",
        "jest.config.*",
        "jest.setup.*"
      ],
      "outputs": ["coverage/**"],
      "env": ["CI"]
    },
    "test:watch": {
      "cache": false,
      "persistent": true
    },
    "test:coverage": {
      "dependsOn": ["^build"],
      "inputs": [
        "src/**/*.{js,jsx,ts,tsx}",
        "test/**/*.{js,jsx,ts,tsx}",
        "app/**/*.{js,jsx,ts,tsx}",
        "__tests__/**/*.{js,jsx,ts,tsx}",
        "jest.config.*",
        "jest.setup.*"
      ],
      "outputs": ["coverage/**"],
      "env": ["CI"]
    },
    "e2e:test": {
      "dependsOn": ["^build"],
      "inputs": [
        "src/**/*.{js,jsx,ts,tsx}",
        "test/**/*.{js,jsx,ts,tsx}",
        "playwright.config.*"
      ],
      "outputs": ["test-results/**", "playwright-report/**"],
      "env": ["CI"]
    },
    "test:e2e:ui": {
      "dependsOn": ["^build"],
      "inputs": [
        "src/**/*.{js,jsx,ts,tsx}",
        "test/**/*.{js,jsx,ts,tsx}",
        "playwright.config.*"
      ],
      "outputs": [],
      "env": ["CI"]
    },
    "install:browsers": {
      "cache": false
    },
    "storybook": {
      "dependsOn": ["^build"],
      "cache": false,
      "persistent": true
    },
    "build-storybook": {
      "dependsOn": ["^build"],
      "inputs": [
        "src/**/*.{js,jsx,ts,tsx}",
        "src/**/*.stories.{js,jsx,ts,tsx}",
        ".storybook/**/*"
      ],
      "outputs": ["storybook-static/**"]
    }
  }
}
