{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "globalEnv": ["CI"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "test": {
      "dependsOn": ["^build"],
      "inputs": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "test/**/*.ts",
        "test/**/*.tsx",
        "app/**/*.ts",
        "app/**/*.tsx",
        "__tests__/**/*.ts",
        "__tests__/**/*.tsx",
        "jest.config.*",
        "jest.setup.*"
      ],
      "outputs": ["coverage/**"]
    },
    "test:watch": {
      "cache": false,
      "persistent": true
    },
    "test:coverage": {
      "dependsOn": ["^build"],
      "inputs": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "test/**/*.ts",
        "test/**/*.tsx",
        "app/**/*.ts",
        "app/**/*.tsx",
        "__tests__/**/*.ts",
        "__tests__/**/*.tsx",
        "jest.config.js",
        "jest.setup.js"
      ],
      "outputs": ["coverage/**"]
    },
    "e2e:test": {
      "dependsOn": ["^build"],
      "inputs": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "test/**/*.ts",
        "test/**/*.tsx",
        "playwright.config.ts"
      ],
      "outputs": ["test-results/**", "playwright-report/**"],
      "env": ["CI"]
    },
    "test:ui": {
      "dependsOn": ["^build"],
      "inputs": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "test/**/*.ts",
        "test/**/*.tsx",
        "playwright.config.ts"
      ],
      "outputs": [],
      "env": ["CI"]
    },
    "install:browsers": {
      "cache": false
    },
    "storybook": {
      "dependsOn": ["^build"],
      "cache": false,
      "persistent": true
    },
    "build-storybook": {
      "dependsOn": ["^build"],
      "inputs": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "src/**/*.stories.ts",
        "src/**/*.stories.tsx",
        ".storybook/**/*"
      ],
      "outputs": ["storybook-static/**"]
    }
  }
}
