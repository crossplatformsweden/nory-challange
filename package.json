{
  "name": "with-tailwind",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "check-types": "turbo run check-types",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "test": "turbo run test",
    "test:watch": "turbo run test:watch",
    "test:coverage": "turbo run test:coverage",
    "e2e": "turbo run test:e2e --filter=web",
    "e2e:ui": "turbo run test:e2e:ui --filter=web",
    "storybook": "turbo run storybook --filter=@repo/ui",
    "build-storybook": "turbo run build-storybook --filter=@repo/ui",
    "install:playwright": "turbo run install:browsers --filter=web",
    "prepare": "husky",
    "generate:page": "pnpm --filter @repo/plop-generators generate:page",
    "generate:page:force": "pnpm --filter @repo/plop-generators generate:page:force",
    "plop": "pnpm --filter @repo/plop-generators plop",
    "start-auto": "launchctl load ~/Library/LaunchAgents/com.user.cursor-automation.plist",
    "stop-auto": "launchctl unload ~/Library/LaunchAgents/com.user.cursor-automation.plist ",
    "external-test": "osascript -e 'tell application \"Terminal\" to do script \"cd ~/Source/nory-challange && pnpm all > build-test-result.txt 2>&1; pnpm cursor-ai\"'",
    "external-clicktest": "osascript -e 'tell application \"Terminal\" to do script \"cd ~/Source/nory-challange && pnpm --filter=web run test:e2e > clickteste2e.txt 2>&1\"'",
    "all": "pnpm build --filter=./packages/* && pnpm check-types --filter=./packages/* && pnpm lint --filter=./packages/* && pnpm test --filter=./packages/* --if-present || true && pnpm build --filter=./apps/* && pnpm check-types --filter=./apps/* && pnpm lint --filter=./apps/* && pnpm test --filter=./apps/* --if-present || true",
    "cursor-ai": "bash /Users/xemil/Source/nory-challange/cursor_ai.sh",
    "jules": "bash ./utils/jules.sh"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@types/node": "^22.15.3",
    "husky": "^9.1.7",
    "lint-staged": "^16.0.0",
    "plop": "^4.0.1",
    "prettier": "^3.5.3",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "ts-node": "^10.9.2",
    "turbo": "^2.5.3",
    "typescript": "5.5.3"
  },
  "packageManager": "pnpm@8.15.6",
  "engines": {
    "node": ">=18"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,mdx,css}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@adobe/react-spectrum": "^3.41.0",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "globals": "^16.1.0",
    "jest": "^29.7.0",
    "tailwind-merge": "^2.2.2"
  }
}
