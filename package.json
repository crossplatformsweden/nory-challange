{
  "name": "with-tailwind",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "check-types": "turbo run check-types",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "test": "turbo run test",
    "test:watch": "turbo run test:watch",
    "test:coverage": "turbo run test:coverage",
    "e2e": "turbo run test --filter=@repo/e2e-tests",
    "e2e:ui": "turbo run test:ui --filter=@repo/e2e-tests",
    "storybook": "turbo run storybook --filter=@repo/ui",
    "build-storybook": "turbo run build-storybook --filter=@repo/ui",
    "install:playwright": "turbo run install:browsers --filter=@repo/e2e-tests",
    "prepare": "husky",
    "all": "pnpm build --filter=./packages/* && pnpm check-types --filter=./packages/* && pnpm lint --filter=./packages/* && pnpm test --filter=./packages/* && pnpm build --filter=./apps/* && pnpm check-types --filter=./apps/* && pnpm lint --filter=./apps/* && pnpm test --filter=./apps/*"
  },
  "devDependencies": {
    "@types/node": "^22.15.3",
    "husky": "^9.1.7",
    "lint-staged": "^16.0.0",
    "prettier": "^3.5.3",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "ts-node": "^10.9.2",
    "turbo": "^2.5.3"
  },
  "packageManager": "pnpm@8.15.6",
  "engines": {
    "node": ">=18"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "jest --bail --findRelatedTests"
    ],
    "*.{json,md,mdx,css}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@adobe/react-spectrum": "^3.41.0",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "globals": "^16.1.0",
    "jest": "^29.7.0",
    "tailwind-merge": "^2.2.2"
  }
}
